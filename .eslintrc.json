{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": ["ejs"],
    "rules": {
        "no-undef": "off",
        "no-unused-vars": "off"
    },
    "overrides": [
        {
            "files": ["*.ejs"],
            "processor": "ejs/ejs"
        }
    ]
}